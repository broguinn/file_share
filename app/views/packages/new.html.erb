<%= form_for @package do |f| %>
  <h2>Create a new package of files</h2>
  <hr>
  
  <div class='form-group'>
    <%= f.label :user_name, 'Name' %>
    <%= f.text_field :user_name, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :user_email, 'Email' %>
    <%= f.text_field :user_email, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :recipient_email, 'Recipient Email' %>
    <%= f.text_field :recipient_email, class: "form-control" %>
  </div>

  <div class='form-group'>
    <%= f.label :message %><br>
    <%= f.text_field :message, class: "form-control" %>
  </div>

  <div id='tasks'>
    <%= f.fields_for :attachments do |attachment| %>
      <%= render 'attachment_fields', :f => attachment %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'Add an attachment', f, :attachments %>
    </div>
  </div>

  <div>
    <%= f.submit 'submit', class: 'btn btn-default' %>
  </div>
<% end %>
